{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "config/*": ["./src/config/*"],
      "components/*": ["./src/components/*"],
      "services/*": ["./src/services/*"],
      "utils/*": ["./src/utils/*"],
      "assets/*": ["./src/assets/*"],
      "src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/"]
}
