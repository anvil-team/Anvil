{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "config/*": ["./src/config/*"],
      "components/*": ["./src/components/*"],
      "services/*": ["./src/services/*"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/"]
}
